<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sap.cloud.sample</groupId>
		<artifactId>sdk-samples-parent</artifactId>
		<version>1.0.0</version>
		<relativePath>..</relativePath>
	</parent>

	<artifactId>persistence-with-ejb</artifactId>
	<packaging>war</packaging>

	<description>This sample provides container-managed persistence with EJB.</description>
	<licenses>
		<license>
			<name>SAP DEVELOPER LICENSE AGREEMENT</name>
			<url>https://tools.hana.ondemand.com/developer-license-3.1.txt</url>
		</license>
	</licenses>

	<dependencies>
		<!-- https://mvnrepository.com/artifact/com.google.code.gson/gson -->
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.8.5</version>
		</dependency>

		<!-- Common Dependencies -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.6</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
			<version>4.1</version>
		</dependency>
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>2.9.9</version>
		</dependency>

		<!-- Required for compilation and required at runtime (additional web application 
			libraries) -->
		<dependency>
			<groupId>com.sap.security.core.server</groupId>
			<artifactId>csi</artifactId>
			<version>1.0.1</version>
			<scope>system</scope>
			<systemPath>${basedir}/WebContent/WEB-INF/lib/com.sap.security.core.server.csi_1.0.1.jar</systemPath>
		</dependency>
		<!-- Required for tests -->
		<dependency>
			<groupId>eclipselink</groupId>
			<artifactId>eclipselink</artifactId>
			<version>2.5.1</version>
			<scope>system</scope>
			<systemPath>${basedir}/WebContent/WEB-INF/lib/eclipselink-2.5.1.jar</systemPath>
		</dependency>
		<!-- Required for executing PersonCRUDIntegrationTest against a SAP HANA 
			DB -->
		<dependency>
			<groupId>com.sap.db</groupId>
			<artifactId>jdbc</artifactId>
			<version>1.102.0.b4b45c17f7c80be1bf0f0b2f247807378c3210d3</version>
			<scope>system</scope>
			<systemPath>${basedir}/WebContent/WEB-INF/lib/com.sap.db.jdbc_1.102.0.b4b45c17f7c80be1bf0f0b2f247807378c3210d3.jar</systemPath>
		</dependency>
		<!-- Required for executing PersonCRUDIntegrationTest without a DB tunnel -->
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.8.2.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<properties>
		<commons-lang3.version>3.6</commons-lang3.version>
		<commons-collections4.version>4.1</commons-collections4.version>
		<joda-time.version>2.9.9</joda-time.version>

		<slf4j.version>1.7.25</slf4j.version>
		<httpmime.version>4.1.3</httpmime.version>
		<gson.version>2.8.1</gson.version>
		<javax.ws.rs-api.version>2.0.1</javax.ws.rs-api.version>

		<!-- DB type to be used for integration testing -->
		<dbtype>hana</dbtype>
		<!-- Explicitly set JMX port for DB tunnel background process to avoid 
			port clash with ${local.server.jmx.port} -->
		<dbtunnel.jmx.port>9019</dbtunnel.jmx.port>
	</properties>
</project>
